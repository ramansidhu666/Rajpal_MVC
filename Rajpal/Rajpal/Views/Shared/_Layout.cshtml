@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />

   
    @RenderSection("head", required: false)

    
    <link href="~/Content/paging.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="~/">MVC 4 Paging With Bootstrap</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active"><a href="~/">AJAX DEMO</a></li>
                        <li class="active"><a href="~/Home/Paging" title="MVC Paging Without AJAX">Paging Demo</a></li>
                    </ul>
                    <a href="#download" class="btn btn-success">Download</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <div id="download">
            <div>
                <h3>
                    nuget package
                </h3>
                <div class="nuget-badge">
                    <p>
                        <code>PM&gt; Install-Package MVC4.Paging </code>
                    </p>
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <div id="footer">
                <div class="container">
                    <p class="muted credit">
                        <i class="icon-globe"></i> <a href="http://mvcpaging.apphb.com/">mvcpaging.apphb.com</a> | <i class="icon-user"></i> Developed by Bhaumik Patel
                </div>
            </div>
        </footer>
    </div>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")*@

    <script src="~/Scripts/jquery-1.8.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive-custom-for-bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
                 
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

   

    @Scripts.Render("~/js")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("Scripts", required: false)
    <script type="text/javascript">
        $(function () {
            $('a').tooltip();
        });
    </script>
</body>
</html>
