
<link rel="apple-touch-icon" sizes="76x76" href="/assets/img/apple-icon.png" />
<link rel="icon" type="image/png" href="/assets/img/favicon.png" />
<!--     Fonts and icons     -->
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
<!-- CSS Files -->
@*<link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />*@
<link href="../assets/css/material-bootstrap-wizard.css" rel="stylesheet" />


<div class="image-container set-full-height" style="background-image: url('../assets/img/wizard-profile.jpg')">
   
    <!--   Big container   -->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <!--      Wizard container        -->
                <div class="wizard-container">
                    <div class="card wizard-card" data-color="green" id="wizardProfile">
                        <form action="" name="registration">

                            <!--        You can switch " data-color="purple" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
                            <div class="wizard-header">

                            </div>
                            <div class="wizard-navigation">
                                <ul>

                                    <li><a href="#account" data-toggle="tab">Login</a></li>

                                </ul>
                            </div>
                            <div class="tab-content">

                                <div class="tab-pane" id="account">

                                    <div class="row">
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">email</i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Email <small>(required)</small></label>
                                                    <input name="email_login" type="email" class="form-control">
                                                    <label id="lblEmail_login" class="color-red"></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">enhanced_encryption</i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">password <small>(required)</small></label>
                                                    <input id="password" name="password_login" type="password" class="form-control">
                                                    <label id="lblPassword_login" class="color-red"></label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                            <div class="wizard-footer">
                                <div class="pull-right">
                                    <input type='button' class='btn btn-next btn-fill btn-success btn-wd' name='next' value='Next' />
                                    <input type='button' id="btnLogin" class='btn btn-finish btn-fill btn-success btn-wd' name='finish' value='Finish' />
                                </div>
                                <div class="pull-left">
                                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </form>
                    </div>
                </div> <!-- wizard container -->
            </div>
        </div><!-- end row -->
    </div> <!--  big container -->
    <div class="footer">
        <div class="container text-center">
            Made with <i class="fa fa-heart heart"></i> by <a href="http://www.creative-tim.com">Creative Tim</a>. Free download <a href="http://www.creative-tim.com/product/bootstrap-wizard">here.</a>
        </div>
    </div>
</div>


