    <div class="property__header">
        <div class="container">
            <div class="property__header-container">
                <ul class="property__main">
                    <li class="property__title property__main-item">
                        <div class="property__meta">
                            <span class="property__offer">@Model.SaleLease</span>

                        </div><!-- .property__meta -->
                        <h2 class="property__name">@Model.TypeOwn1Out</h2>
                        <span class="property__address"><i class="ion-ios-location-outline property__address-icon"></i>@Model.Address, @Model.Municipality,<br /> @Model.PostalCode, @Model.Province </span>
                    </li>
                    <li class="property__details property__main-item">
                        <ul class="property__stats">
                            @if (@ViewBag.Type != "Commercial")
                            {
                                if (Model.Bedrooms == 0)
                                {
                                    <li class="property__stat"><span class="property__figure">N/A</span>  Beds</li>
                                }
                                else
                                {
                                    <li class="property__stat"><span class="property__figure">@Model.Bedrooms<sup>&plus;</sup></span> Beds</li>
                                }

                                if (Model.Washrooms == null)
                                {
                                    <li class="property__stat"><span class="property__figure">N/A</span> Baths</li>
                                }
                                else
                                {
                                    <li class="property__stat"><span class="property__figure">@Model.Washrooms</span> Baths</li>
                                }


                            }

                            @if (Model.ApproxSquareFootage == "null")
                            {
                                <li class="property__stat"><span class="property__figure">N/A </span> sq.ft</li>
                            }
                            else
                            {
                                <li class="property__stat"><span class="property__figure">@Model.ApproxSquareFootage</span> sq.ft</li>
                            }

                        </ul><!-- .listing__stats -->
                    </li>
                    <li class="property__price property__main-item">
                        <h4 class="property__price-primary">$ @Model.ListPrice</h4>
                        @*<span class="property__price-secondary">$4,824/sq.ft</span>*@
                    </li>
                </ul><!-- .property__main -->
                <ul class="property__list">
                    <li class="property__item">
                        <a href="#" class="property__link">
                            <i class="fa fa-heart-o property__icon" aria-hidden="true"></i>
                            <span class="property__item-desc">Favorite</span>
                        </a>
                    </li>
