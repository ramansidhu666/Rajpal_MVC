        <div class="container">
            <div class="row">
                <h1 class="section__title section__title--centered section__title--b-margin-40">Open Houses</h1>
                @{
                    Html.RenderPartial("~/Views/SearchBar_Partial.cshtml");
                }
                <main class="col-md-9">
                   
